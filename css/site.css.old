


body {
/*  font-family: Verdana, "Bitstream Vera Sans", sans-serif; */
  font-family: "Droid Serif",1em/1.25 "Merriweather",Georgia,"Times New Roman",serif;
  font-size: 1em;
}


/* Headings
 * --------------------------------------------------------------------- */
h1,h2,h3,h4,h5,h6 { color: #111; }

/* Text Elements
 * --------------------------------------------------------------------- */
a                 { color: #125AA7; }
a:hover           { color: #000; }
blockquote        { color: #666; }

pre {
  background: #eee;
  border:     1px solid #ddd;
}

p li {
  font-size: 1.25em;
}

p + p { 
  margin-top: -0.5em; 
  text-indent: 0em;
}

/* Tables
 * --------------------------------------------------------------------- */
table {
  border-top:     1px solid #ddd;
  border-left:    1px solid #ddd;
}
th,td {
  border-bottom:  1px solid #ddd;
  border-right:   1px solid #ddd;
}

/* Default Classes
 * --------------------------------------------------------------------- */
p.quiet { color: #666; }
.alt    { color: #666; }

p.title {
  color: #111;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 1em;
  margin-bottom: 0.75em;
}

#header p.title { font-size: 2em; line-height: 1; margin-bottom: 0.5em; }


/* EOF */
